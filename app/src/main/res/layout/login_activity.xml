<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/background_arcs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mask"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/background_image_tint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_concoke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mask"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/lvl"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins_extrabold"
        android:gravity="top"
        android:text="@string/lvl"
        android:textAppearance="@style/lvl"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/nxt"
        app:layout_constraintTop_toTopOf="@+id/nxt" />

    <TextView
        android:id="@+id/nxt"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/poppins_extrabold"
        android:foregroundGravity="top"
        android:gravity="top"
        android:text="@string/nxt"
        android:textAppearance="@style/nxt"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/mask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/ic_ieee"
        app:layout_constraintStart_toStartOf="@+id/nxt"
        app:layout_constraintTop_toTopOf="@+id/nxt" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="57dp"
        android:layout_height="26dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/ic_cs"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/nxt" />


    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:background="@drawable/ic_mask"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />

    <TextView
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/poppins_extrabold"
        android:gravity="end|top"
        android:text="LOGIN "
        android:textAppearance="@style/login"
        android:textSize="45sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/mask"
        app:layout_constraintTop_toTopOf="@+id/mask"
        android:layout_marginTop="150dp"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/poppins"
        android:hint="EMAIL"
        android:maxLines="1"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:drawableEnd="@drawable/ic_person_outline_black_24dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/poppins"
        android:hint="PASSWORD"
        android:maxLines="1"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
        />

    <ImageButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:background="@drawable/forward_button_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".7"
        android:tint="@color/white"
        />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="40dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:animateLayoutChanges="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_primary_button_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signing in..."
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>