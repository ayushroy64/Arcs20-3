<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="54dp"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/d1_imageView"
                android:layout_width="92dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_img_sample"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/d1_textView"
                android:layout_width="96dp"
                android:layout_height="30dp"
                android:layout_marginEnd="132dp"
                android:layout_marginRight="132dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="left"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/d1_textView2" />

            <TextView
                android:id="@+id/d1_textView2"
                android:layout_width="85dp"
                android:layout_height="27dp"
                android:layout_marginEnd="144dp"
                android:layout_marginRight="144dp"
                android:gravity="left"
                app:layout_constraintBottom_toTopOf="@+id/d1_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/d1_tv1" />

            <TextView
                android:id="@+id/d1_tv1"
                android:layout_width="101dp"
                android:layout_height="25dp"
                android:layout_marginEnd="128dp"
                android:layout_marginRight="128dp"
                android:gravity="left"
                app:layout_constraintBottom_toTopOf="@+id/d1_textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>