<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:fontFamily="@font/poppins_blackitalic"
            android:paddingRight="4dp"
            android:text="Timeline"
            android:textAllCaps="false"
            android:textColor="#494949"
            android:textSize="50sp"
            android:textStyle="italic"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/arcs_logo_secondary"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            app:layout_constraintVertical_bias="1.0" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_below="@id/header"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="19th March'20"
                    android:textAlignment="center"
                    android:textColor="#494949"
                    android:textSize="30dp"
                    android:textStyle="italic" />


                <com.ieeecs.arcs20.NonScrollListView
                    android:id="@+id/timeline_list_view_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="20th March'20"
                    android:textColor="#494949"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:layout_marginTop="20dp"/>


                <com.ieeecs.arcs20.NonScrollListView
                    android:id="@+id/timeline_list_view_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="21st March'20"
                    android:textColor="#494949"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:layout_marginTop="20dp"/>


                <com.ieeecs.arcs20.NonScrollListView
                    android:id="@+id/timeline_list_view_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>