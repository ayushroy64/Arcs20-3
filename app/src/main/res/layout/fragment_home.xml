<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">



    <TextView
        android:id="@+id/nxt"
        android:layout_width="77.44dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11.56dp"
        android:fontFamily="@font/poppins_blackitalic"
        android:letterSpacing="-0.06"
        android:shadowColor="#73FFFFFF"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="@string/nxt"
        android:textColor="#494949"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="11.56dp" />

    <TextView
        android:id="@+id/lvl"
        android:layout_width="47.25dp"
        android:layout_height="33dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="8.75dp"
        android:fontFamily="@font/poppins_blackitalic"
        android:gravity="top"
        android:letterSpacing="-0.06"
        android:shadowColor="#73FFFFFF"
        android:shadowDx="-3"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:text="@string/lvl"
        android:textColor="#494949"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8.75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/poppins_blackitalic"
        android:letterSpacing="-0.04"
        android:text="Home"
        android:textColor="#494949"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0.16"
        android:text="TIMELINE"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="46dp" />

    <ImageView
        android:id="@+id/timeline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_timeline"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="150dp"
        android:clipToPadding="false"
        android:paddingStart="44dp"
        android:paddingEnd="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="19dp"
        android:background="#979797"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_timeline"
        android:layout_marginLeft="44dp" />

    <View
        android:id="@+id/view"
        android:layout_width="122dp"
        android:layout_height="1dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="19dp"
        android:background="#494949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_timeline"
        android:layout_marginLeft="44dp" />

    <TextView
        android:id="@+id/convoke_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0.16"
        android:text="CONVOKE"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginLeft="46dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:id="@+id/convoke_button"
        android:layout_marginRight="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_convoke"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="45dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:paddingEnd="44dp"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="19dp"
        android:background="#979797"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_convoke"
        android:layout_marginLeft="44dp" />

    <TextView
        android:id="@+id/workshop_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0.16"
        android:text="WORKSHOP"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginLeft="46dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:id="@+id/workshop_button"
        android:layout_marginRight="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_workshop"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="15dp"
        android:paddingEnd="44dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workshop_header" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="19dp"
        android:background="#979797"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_workshop"
        android:layout_marginLeft="44dp" />




</androidx.constraintlayout.widget.ConstraintLayout>